.split.mbl
  .split-cell

    %ul.list.list--inline.list--inline--l
      .list-item= link_to "All", compliments_path, class: "list-item-link #{active_class(compliments_path)}"
      .list-item= link_to "Given", given_compliments_path, class: "list-item-link #{active_class(given_compliments_path)}"
      .list-item= link_to "Received", received_compliments_path, class: "list-item-link #{active_class(received_compliments_path)}"

  .split-cell

    = link_to "New Compliment", new_compliment_path, class: "btn"
    = link_to "Download My Compliments", received_compliments_path(format: :csv), class: "btn"

- unless @compliments.empty?
  .g.collection.collection--1of2
    - @compliments.each do |compliment|
      .g-b.g-b--1of2.collection-item
        = render compliment
- else
  %p.pal.tac.tcs.tsi There are no compliments currently. Say something nice :)
